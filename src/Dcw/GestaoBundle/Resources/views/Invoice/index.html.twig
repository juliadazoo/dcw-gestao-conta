{% extends 'DcwGestaoBundle::_layout.html.twig' %}

{% block body -%}
    <h1>Invoice list</h1>

    <table id="entity-table" class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Store</th>
                <th>Value</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('invoice_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.store.name }}</td>
                <td>R$ {{ entity.value }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('invoice_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('invoice_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('invoice_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
